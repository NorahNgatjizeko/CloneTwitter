<p id="notice"><%= notice %></p>

<h1> List of Tweets </h1>

<table>
  <thead>
    <tr>
      <th>content</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post_path(post.id), data: {confirm: 'Are you sure you want to see?'} %></td>
        <td><%= link_to 'Edit', edit_post_path(post.id), data: {confirm: 'Are you sure you want to edit?'} %></td>
        <td><%= link_to 'Delete',post, method: :delete, data: {confirm: 'Are you sure you want to delete?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

